# MISC
# screenshots
alt + s
    maim -s "$XDG_PICTURES_DIR/scrot/$(date +%s).png"
alt + f
    maim "$XDG_PICTURES_DIR/scrot/$(date +%s).png"
# volume
alt + j
   amixer -D pulse sset Master 5%- && pkill -RTMIN+10 dwmblocks
alt + k
   amixer -D pulse sset Master 5%+ && pkill -RTMIN+10 dwmblocks
control + alt + j
   spt-vol.sh -
control + alt + k
   spt-vol.sh +
control + alt + space
   spt-mute.sh
# wallpaper
alt + b
    randwall
# lock
super + z
    lock 
# mixer
alt + m
    "$TERMINAL" -e pulsemixer 
# xkill
alt + x
    pkill xkill || xkill
# reload sxhkd
control + Return
    pkill -USR1 -x sxhkd

# LAUNCH
# python shell
alt + shift + p 
    "$TERMINAL" -e "$INTPY"
# persistant terminal
alt + Return
    "$TERMINAL" -e tmux attach -t subs || "$TERMINAL" -e tmux new -s subs
# ranger fm
alt + shift + r
    "$TERMINAL" -e ranger
# vimwiki
alt + shift + w
    "$TERMINAL" -e nvim -c VimwikiIndex -c 'cd $VIMWIKI'
# firefox
alt + shift + c
    "$BROWSER"
# bloated spyware
alt + shift + d
    discord
# spotify
alt + shift + s
    "$TERMINAL" -e spt
# thunar
alt + shift + t
    thunar
# htop
alt + shift + h
   "$TERMINAL" -e htop 
# nnn
alt + shift + n
    "$TERMINAL" -e nnn -de
# zathura
alt + shift + z
    "$READER"

# terminal
super + Return
    "$TERMINAL"
# no tmux terminal
control + super + Return
    "$TERMINAL"
# dmenu
super + r
    dmenu_run

# intercept keybind from firefox
control + q
    sleep 0
