# MISC
# screenshots
alt + s
    maim -s ~/media/images/scrot/$(date +%s).png
alt + f
    maim ~/media/images/scrot/$(date +%s).png
# volume
alt + j
   amixer -D pulse sset Master 5%- && pkill -RTMIN+10 dwmblocks
alt + k
   amixer -D pulse sset Master 5%+ && pkill -RTMIN+10 dwmblocks
# wallpaper
alt + b
    randwall
# lock
super + z
    lock 
# mixer
alt + m
    st -e pulsemixer 
# xkill
alt + x
    pkill xkill || xkill
# reload sxhkd
control + Return
    pkill -USR1 -x sxhkd

# LAUNCH
# python shell
alt + shift + p 
    st -e python
# ranger fm
alt + shift + r
    st -e ranger
# vimwiki
alt + shift + w
    st -e nvim -c VimwikiIndex
# firefox
alt + shift + c
    firefox
# bloated spyware
alt + shift + d
    discord
# spotify
alt + shift + s
    st -e spt
# nemo
alt + shift + n
    nemo

# terminal
super + Return
    st
# rofi
super + r
    rofi -theme gruvbox-dark -show run

# intercept keybind from firefox
control + q
    echo
